-- Fun√ß√£o para executar script e remover GUI
local function executeAndClose(url)
	ScreenGui:Destroy()
	loadstring(game:HttpGet(url))()
end

-- Conex√µes
PCButton.MouseButton1Click:Connect(function()
	executeAndClose("https://raw.githubusercontent.com/snowbrkkkk/TotallyISsnowzinnn/refs/heads/main/Pcscript")
end)

